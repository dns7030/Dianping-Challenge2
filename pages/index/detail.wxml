<!--pages/index/detail.wxml-->
<view class="title-box">
    <view class="name">{{restaurant.name}}</view>
    <view class="desc">{{restaurant.content}}</view>
</view>

<view class="reviews">
    <view class="title">Reviews</view>
    <view wx:for="{{reviews}}" class="review-items" wx:for-item="review">
        <view class="content">{{review.review}}</view>
    </view>
</view>
